<div class="intro-header">
	<div class="container">
  	<div class="row">
  		 <div class="search-page">
  			
				<h1>Search</h1>
			<!-- 	<div class="col-lg-7"></div> -->
				<div class="col-md-5 col-md-offset-3 food-search">
					<%= form_tag search_path, method: 'get' do %>
						<%= text_field_tag :food, params[:food], class: 'form-control' %>
						<%= button_tag('Search', class: 'btn btn-primary') %>
					<% end %>
				</div>
				
				<div class="col-lg-12"></div>
			<!-- 	<div class="col-md-6 col-offset-3	search-results"> -->
					<% @foods.each do |food| %>
						<%= render 'food_facts/result', food: food %>
					<% end %>
			<!-- 	</div> -->
	
			</div>		
		</div>
	</div>
</div>

